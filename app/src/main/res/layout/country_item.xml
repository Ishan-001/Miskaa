<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:id="@+id/flag_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/flag_icon"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Name"
            android:id="@+id/country_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            android:textColor="#474747"
            android:textStyle="bold"
            android:text="Region"
            android:id="@+id/region_name"
            android:layout_below="@+id/country_name"
            android:layout_toEndOf="@id/flag_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            android:textColor="#474747"
            android:textStyle="bold"
            android:text="Capital"
            android:id="@+id/capital_name"
            android:layout_below="@+id/region_name"
            android:layout_toEndOf="@id/flag_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            android:textColor="#474747"
            android:textStyle="bold"
            android:text="Sub Resion"
            android:id="@+id/sub_region_name"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/country_name"
            android:layout_marginEnd="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            android:textColor="#474747"
            android:textStyle="bold"
            android:text="Population"
            android:id="@+id/population_count"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/sub_region_name"
            android:layout_marginEnd="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:id="@+id/languages_"
            android:layout_below="@id/capital_name"
            android:layout_margin="5dp"
            android:text="Languages: "
            android:layout_toEndOf="@id/flag_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#474747"
            android:textStyle="bold"
            android:id="@+id/languages"
            android:text="Template"
            android:layout_toEndOf="@id/languages_"
            android:layout_below="@id/population_count"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>